<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:text="Enter O T P"
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/edit_otp1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/edit_otp2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit_otp3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit_otp4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit_otp5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit_otp6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Timer"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_timer"
        android:layout_marginTop="5dp"
        android:text="Resend"
        android:textAlignment="center"
        android:textColor="#0000ff"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_resend"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_btn"
            android:padding="0dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/otp_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/verify_btn"
            android:padding="0dp"
            android:text="Verify"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/otp_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/layout_otp"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone" />


</RelativeLayout>