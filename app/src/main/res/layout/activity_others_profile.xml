<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="me.dats.com.datsme.Activities.Others_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#fff"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Other_image"
                    android:src="@drawable/logo"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#36000000">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rahul Gupta"
                    android:textSize="28dp"
                    android:id="@+id/Other_name"
                    android:textStyle="bold"
                    android:layout_marginTop="210dp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/Other_addFriend"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="210dp"
                    android:layout_marginTop="275dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:background="@drawable/button_datsme_color">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/Other_addIcon"
                        android:src="@drawable/ic_person_add_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFF"
                        android:layout_toRightOf="@+id/Other_addIcon"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:text="ADD FRIEND"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/Other_requestSend"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="210dp"
                    android:layout_marginTop="275dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:background="@drawable/button_datsme_color">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:rotation="-30"
                        android:id="@+id/Other_requestIcon"
                        android:src="@drawable/request_send"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFF"
                        android:layout_toRightOf="@+id/Other_requestIcon"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:text="Request send"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/Other_CancelRequest"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="210dp"
                    android:layout_marginTop="340dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:background="@drawable/button_datsme_color">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/Other_cancelrequestIcon"
                        android:src="@drawable/cancel_request"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFF"
                        android:layout_toRightOf="@+id/Other_cancelrequestIcon"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:text="Cancel Request"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_black_24dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#a19f9f"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="This Profile is hidden"
        />

</LinearLayout>
    </LinearLayout>
    </ScrollView>
